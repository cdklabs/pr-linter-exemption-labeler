  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^18",
    "@typescript-eslint/eslint-plugin": "^7",
    "@typescript-eslint/parser": "^7",
    "@vercel/ncc": "^0.38.2",
    "constructs": "^10.0.0",
    "eslint": "^8",
    "eslint-config-prettier": "^8.10.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.7.0",
